;buraya assembly ödevimi atıcam
MYSS SEGMENT PARA STACK 'stack'
	DW 20 DUP(?)
MYSS ENDS

MYDS SEGMENT PARA 'data'
	USERMSG DB 'PLEASE ENTER A NUMBER: ',40H, '$' 
	DISPMSG DB 'YOU HAVE ENTERED', 40H, '$'
MYDS ENDS 
MYCS SEGMENT PARA 'kod'
	ASSUME CS:MYCS, DS:MYDS, SS:MYSS
	INPUTALMA PROC FAR
		
	PUSH DS
	XOR AX, AX
	PUSH AX
	MOV AX, MYDS
	MOV DS, AX
		
	;write first message: please enter number 
	LEA DX, USERMSG ;LOAD EFFECTIVE ADRESS 
	MOV AH, 09H	;WRITE THE STRING 
	INT 21H
	
	;read the data --> stored al register 
	MOV AH, 01 
	INT 21H
	MOV BL, AL 

	;clear screen 
	MOV AX, 03 
	INT 10H
	
	;write second message: you have entered: 
	LEA DX, DISPMSG 
	MOV AH, 09H
	INT 21H	

	; display a single character 
	MOV AH, 2 
	MOV DL, BL 
	INT 21H

	;CLOSE STDIN 
	MOV AH, 4CH
	INT 21H
	INT 20H	


	RETF 
	INPUTALMA ENDP
MYCS ENDS
		END INPUTALMA
 
